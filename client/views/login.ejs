<!DOCTYPE html>
<html lang="en">
  <%- include('header') %>
  <body>
    <div class="container">
      <h1 class="my-4 text-center">Login to Patient Record Contract</h1>

      <div class="card mb-4">
        <div class="card-header">Select Account</div>
        <div class="card-body">
          <form id="loginForm" action="/login" method="POST">
            <div class="mb-3">
              <label for="accountSelect" class="form-label"
                >Select Account</label
              >
              <select
                class="form-select"
                id="accountSelect"
                name="vendor"
                required
              >
                <% for (var key in accounts) { %>
                <option><%= key %></option>
                <% } %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
